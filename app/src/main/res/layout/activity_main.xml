<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtSpeechInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="normal"
        android:layout_below="@+id/btnSpeak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:src="@drawable/microphone"
        android:layout_below="@+id/txtSpeechInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_on_mic"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal"
        android:id="@+id/textView"
        android:layout_below="@+id/btnSpeak"
        android:layout_centerHorizontal="true" />-->

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25sp"
        android:id="@+id/button1"
        android:layout_above="@+id/button10"
        android:layout_alignStart="@+id/button10" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="25sp"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="25sp"
        android:id="@+id/button3"
        android:layout_above="@+id/buttonC"
        android:layout_alignStart="@+id/button6" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="25sp"
        android:id="@+id/button4"
        android:layout_below="@+id/buttonadd"
        android:layout_alignStart="@+id/button7" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="25sp"
        android:id="@+id/button5"
        android:layout_above="@+id/button1"
        android:layout_toEndOf="@+id/button4" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="25sp"
        android:id="@+id/button6"
        android:layout_below="@+id/buttonadd"
        android:layout_alignStart="@+id/button9" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="25sp"
        android:id="@+id/button7"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="25sp"
        android:id="@+id/button8"
        android:layout_above="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="25sp"
        android:id="@+id/button9"
        android:layout_above="@+id/button6"
        android:layout_toEndOf="@+id/button5" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="25sp"
        android:id="@+id/buttonadd"
        android:layout_above="@+id/buttonsub"
        android:layout_alignStart="@+id/buttonmul" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="25sp"
        android:id="@+id/buttonsub"
        android:layout_alignTop="@+id/button5"
        android:layout_alignEnd="@+id/buttonadd" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="25sp"
        android:id="@+id/buttonmul"
        android:layout_above="@+id/buttondiv"
        android:layout_alignParentEnd="true" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="25sp"
        android:id="@+id/button10"
        android:layout_above="@+id/buttoneql"
        android:layout_alignStart="@+id/button7" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        android:id="@+id/button0"
        android:layout_above="@+id/buttoneql"
        android:layout_alignStart="@+id/button8" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="25sp"
        android:id="@+id/buttonC"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button3" />

    <Button
        style="@style/Base.Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25sp"
        android:id="@+id/buttondiv"
        android:layout_below="@+id/button3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="25sp"
        android:id="@+id/buttoneql"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button10"
        android:layout_alignEnd="@+id/buttonsub"
        style="@style/Base.Widget.AppCompat.ButtonBar" />

</RelativeLayout>
